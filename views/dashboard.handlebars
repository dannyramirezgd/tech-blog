<div>
  <h2>Want to create a new post?</h2>
  <a href="/new-post"><button type="submit" class="btn">New Post</button> </a>
</div>

{{#if posts.length}}
  <section>
    <h2>Your Posts</h2>
    <ol>
      {{#each posts as |post|}}
        <li>
          <article class="post">
            <div class="title">
              <a href="/dashboard/edit/{{post.id}}">{{title}}</a>
            </div>
            <div class="meta">
              created by
              {{user.username}}
              on
              {{format_date created_at}}
              |
              <span>{{comments.length}}
                {{format_plural "comment" comments.length}}</span>
            </div>
          </article>
        </li>
      {{/each}}
    </ol>
  </section>
{{/if}}
<script src="/javascript/add-post.js"></script>